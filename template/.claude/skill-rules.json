          "create.*?issues.*?from tasks"
        ]
      }
    },
    "custom-refactor": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Parallel refactoring with systematic quality improvements",
      "promptTriggers": {
        "keywords": [
          "refactor",
          "refactoring",
          "clean code",
          "improve code",
          "code quality",
          "technical debt",
          "cleanup",
          "DRY",
          "SOLID",
          "dead code",
          "naming",
          "type safety"
        ],
        "intentPatterns": [
          "(refactor|clean|improve|optimize).*?(code|codebase)",
          "(remove|eliminate).*?(dead code|duplication|technical debt)",
          "(improve|enhance|strengthen).*?(quality|naming|types)",
          "(consolidate|DRY|simplify).*?code"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "src/**/*.ts",
          "src/**/*.tsx",
          "src/**/*.js",
