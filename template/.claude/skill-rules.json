    },
    "custom-upgrade": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Safe dependency upgrade with breaking change fixes",
      "promptTriggers": {
        "keywords": [
          "upgrade",
          "update dependencies",
          "dependency upgrade",
          "npm update",
          "breaking changes",
          "migration",
          "package upgrade",
          "security vulnerabilities",
          "outdated packages"
        ],
        "intentPatterns": [
          "(upgrade|update).*?(dependencies|packages|deps)",
          "(fix|handle|resolve).*?breaking changes",
          "(migrate|upgrade).*?(version|major)",
          "update.*?to latest",
          "(check|fix).*?(vulnerabilities|security)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "package.json",
          "package-lock.json",
          "yarn.lock",
          "pnpm-lock.yaml",
          "bun.lockb"
        ],
        "contentPatterns": [
          "\"dependencies\":",
          "\"devDependencies\":",
          "\"peerDependencies\":"
        ]
      }
    }
  },
  "notes": {
    "enforcement_types": {
      "suggest": "Skill suggestion appears but doesn't block execution",
      "block": "Requires skill to be used before proceeding (guardrail)",
      "warn": "Shows warning but allows proceeding"
    },
    "priority_levels": {
      "critical": "Highest - Always trigger when matched, execution-level importance",
      "high": "Important - Trigger for most matches",
      "medium": "Moderate - Trigger for clear matches",
      "low": "Optional - Trigger only for explicit matches"
    },
    "skill_types": {
      "domain": "Domain-specific development guidance (backend, frontend, etc.)",
      "guardrail": "Quality and safety enforcement (standards, security)",
      "workflow": "Multi-step processes (SpecKit commands, refactoring, upgrades)"
    },
    "customization": {
      "pathPatterns": "Adjust to match your project structure (backend, frontend, specs, etc.)",
      "keywords": "Add domain-specific terms relevant to your project",
      "intentPatterns": "Use regex for flexible user intent matching",
      "contentPatterns": "Trigger on specific code patterns or imports"
    },
    "speckit_workflow": {
      "description": "SpecKit provides end-to-end feature development workflow",
      "typical_flow": "specify → clarify → plan → tasks → analyze → implement",
      "phase_triggers": "Commands auto-suggest based on current phase and available artifacts"
    },
    "custom_commands": {
      "custom-refactor": "Multi-wave parallel refactoring: foundation → semantics → architecture → polish",
      "custom-upgrade": "Risk-based upgrade strategy: patches → minors → majors with automated fixes"
    }
  }
}
