{
  "version": "1.0",
  "description": "Skill activation triggers for Claude Code. Controls when skills and commands automatically suggest or block actions.",
  "skills": {
    "backend-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Backend development patterns for Node.js/Express/TypeScript",
      "promptTriggers": {
        "keywords": [
          "backend",
          "backend development",
          "microservice",
          "controller",
          "service",
          "repository",
          "route",
          "routing",
          "express",
          "API",
          "endpoint",
          "middleware",
          "validation",
          "Zod",
          "Prisma",
          "database access",
          "BaseController",
          "dependency injection",
          "configuration"
        ],
        "intentPatterns": [
          "(create|add|implement|build).*?(route|endpoint|API|controller|service|repository)",
          "(fix|handle|debug).*?(error|exception|backend)",
          "(add|implement).*?(middleware|validation|error.*?handling)",
          "(organize|structure|refactor).*?(backend|service|API)",
          "(how to|best practice).*?(backend|route|controller|service)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "backend/**/*.ts",
          "api/**/*.ts",
          "server/**/*.ts",
          "services/**/*.ts",
          "src/features/**/services/**/*.ts",
          "src/features/**/repositories/**/*.ts"
        ],
        "pathExclusions": [
          "**/*.test.ts",
          "**/*.spec.ts"
        ],
        "contentPatterns": [
          "router\\.",
          "app\\.(get|post|put|delete|patch)",
          "export.*Controller",
          "export.*Service",
          "prisma\\."
        ]
      }
    },
    "frontend-dev-guidelines": {
      "type": "guardrail",
      "enforcement": "suggest",
      "priority": "high",
      "description": "React/TypeScript best practices including modern UI patterns",
      "promptTriggers": {
        "keywords": [
          "component",
          "react component",
          "UI",
          "interface",
          "page",
          "modal",
          "dialog",
          "form",
          "MUI",
          "Material-UI",
          "Grid",
          "styling",
          "frontend",
          "React",
          "Vue",
          "Svelte",
          "hooks",
          "state management"
        ],
        "intentPatterns": [
          "(create|add|make|build|update|modify|edit).*?(component|UI|page|modal|dialog|form)",
          "(how to|best practice).*?(component|react|frontend)",
          "(style|design|layout).*?(component|UI)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "frontend/src/**/*.tsx",
          "frontend/src/**/*.ts",
          "client/src/**/*.tsx",
          "client/src/**/*.ts",
          "src/**/*.tsx",
          "src/components/**/*.ts",
          "src/features/**/components/**/*.tsx"
        ],
        "pathExclusions": [
          "**/*.test.tsx",
          "**/*.test.ts",
          "**/*.spec.tsx",
          "**/*.spec.ts",
          "**/*.styles.ts",
          "**/vite.config.ts",
          "**/tsconfig.json"
        ],
        "contentPatterns": [
          "from '@mui/material';",
          "import.*React.*from",
          "export.*Component",
          "useState",
          "useEffect"
        ]
      }
    },
    "route-tester": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "description": "API route testing and debugging utilities",
      "promptTriggers": {
        "keywords": [
          "test route",
          "test endpoint",
          "test API",
          "debug route",
          "curl",
          "postman",
          "authenticated test",
          "JWT test"
        ],
        "intentPatterns": [
          "(test|debug|verify).*?(route|endpoint|API)",
          "(how to|how do I).*?test.*?(route|endpoint|API)",
          "test.*?(authenticated|auth|JWT|cookie)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/routes/**/*.ts",
          "**/test-*.js",
          "**/test-*.ts"
        ],
        "contentPatterns": [
          "router\\.(get|post|put|delete|patch)",
          "app\\.(get|post|put|delete|patch)"
        ]
      }
    },
    "error-tracking": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Error tracking and monitoring patterns (Sentry, etc.)",
      "promptTriggers": {
        "keywords": [
          "error handling",
          "exception",
          "sentry",
          "error tracking",
          "captureException",
          "monitoring",
          "performance tracking",
          "observability"
        ],
        "intentPatterns": [
          "(add|create|implement|setup).*?(error handling|sentry|error tracking)",
          "(fix|handle|catch).*?(error|exception)",
          "(how to|best practice).*?(error|sentry|monitoring)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/instrument.ts",
          "**/sentry*.ts",
          "**/*Controller.ts",
          "**/*Service.ts"
        ],
        "contentPatterns": [
          "@sentry",
          "Sentry\\.",
          "captureException",
          "captureMessage"
        ]
      }
    },
    "skill-developer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Meta-skill for creating and managing Claude Code skills",
      "promptTriggers": {
        "keywords": [
          "skill system",
          "create skill",
          "add skill",
          "skill triggers",
          "skill rules",
          "hook system",
          "skill development",
          "skill-rules.json"
        ],
        "intentPatterns": [
          "(how do|how does|explain).*?skill",
          "(create|add|modify|build).*?skill",
          "skill.*?(work|trigger|activate|system)"
        ]
      }
    },
    "speckit.specify": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Create or update feature specification from natural language",
      "promptTriggers": {
        "keywords": [
          "create spec",
          "feature spec",
          "specification",
          "requirements",
          "new feature",
          "define feature",
          "user story",
          "functional requirements"
        ],
        "intentPatterns": [
          "(create|write|generate).*?(spec|specification|requirements)",
          "(new|add).*?feature",
          "(define|specify).*?(requirements|feature)",
          "I want to (build|create|add|implement)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "specs/**/spec.md",
          ".specify/**/spec.md"
        ]
      }
    },
    "speckit.plan": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Execute implementation planning workflow with design artifacts",
      "promptTriggers": {
        "keywords": [
          "implementation plan",
          "technical design",
          "architecture plan",
          "design document",
          "tech stack",
          "data model",
          "API contract",
          "system design"
        ],
        "intentPatterns": [
          "(create|generate|write).*?(plan|design|architecture)",
          "(plan|design).*?(implementation|system|architecture)",
          "how to (implement|build|architect)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "specs/**/plan.md",
          "specs/**/data-model.md",
          "specs/**/contracts/**/*",
          ".specify/**/plan.md"
        ]
      }
    },
    "speckit.tasks": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Generate actionable, dependency-ordered task list",
      "promptTriggers": {
        "keywords": [
          "generate tasks",
          "task list",
          "break down",
          "implementation tasks",
          "work breakdown",
          "todo list",
          "action items"
        ],
        "intentPatterns": [
          "(generate|create|break down).*?(tasks|work|todos)",
          "(list|outline).*?(tasks|steps|work)",
          "what.*?(tasks|steps).*?needed"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "specs/**/tasks.md",
          ".specify/**/tasks.md"
        ]
      }
    },
    "speckit.implement": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "critical",
      "description": "Execute implementation by processing tasks.md",
      "promptTriggers": {
        "keywords": [
          "implement",
          "execute tasks",
          "start implementation",
          "build feature",
          "code feature",
          "execute plan"
        ],
        "intentPatterns": [
          "(implement|execute|start|build).*?(feature|tasks|plan)",
          "(code|write).*?implementation",
          "let's (build|implement|start)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "specs/**/tasks.md"
        ],
        "contentPatterns": [
          "- \\[ \\].*\\[T[0-9]+\\]",
          "## Phase [0-9]+"
        ]
      }
    },
    "speckit.analyze": {
      "type": "workflow",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Cross-artifact consistency and quality analysis",
      "promptTriggers": {
        "keywords": [
          "analyze spec",
          "check consistency",
          "validate design",
          "review plan",
          "consistency check",
          "quality check",
          "verify artifacts"
        ],
        "intentPatterns": [
          "(analyze|check|validate|verify).*?(spec|plan|tasks|consistency)",
          "(find|identify).*?(issues|problems|inconsistencies)",
          "(review|audit).*?(design|artifacts)"
        ]
      }
    },
    "speckit.clarify": {
