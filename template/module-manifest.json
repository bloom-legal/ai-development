{
  "version": "3.1.0",
  "description": "AI Development Environment - KISS Architecture",
  "source": {
    "claude": {
      "path": "template/.claude/",
      "contents": ["commands/", "hooks/", "agents/", "settings.json"]
    },
    "rulesync": {
      "path": "template/.rulesync/",
      "contents": ["rules/", "mcp.json.template", ".aiignore"]
    }
  },
  "destinations": {
    "global": {
      "path": "~/.claude/",
      "syncs": ["commands/", "hooks/", "agents/", "settings.json", "CLAUDE.md"]
    },
    "perProject": {
      "path": ".rulesync/",
      "syncs": ["rules/", "commands/", ".aiignore"],
      "targets": ["cursor", "roo"]
    }
  }
}
